<Window x:Class="StickyNotesApp.Views.NoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Sticky Note"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        Topmost="{Binding IsPinned}"
        WindowStartupLocation="Manual"
        Loaded="Window_Loaded"
        Deactivated="Window_Deactivated"
        LocationChanged="Window_LocationChanged"
        SizeChanged="Window_SizeChanged">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Border CornerRadius="10"
            BorderBrush="#33000000"
            BorderThickness="1"
            Background="{Binding Color}"
            Padding="0"
            SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title / command bar -->
            <Border Grid.Row="0"
                    Background="#1A000000"
                    Padding="8"
                    MouseLeftButtonDown="TitleBar_OnMouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ToggleButton Width="68"
                                      Height="28"
                                      Margin="0,0,6,0"
                                      Content="Pin"
                                      IsChecked="{Binding IsPinned}"
                                      ToolTip="Keep this note on top" />
                    </StackPanel>

                    <Button x:Name="MenuButton"
                            Grid.Column="1"
                            Width="32"
                            Height="28"
                            Margin="12,0,0,0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            ToolTip="More options"
                            Click="MenuButton_OnClick">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Ellipse Width="4" Height="4" Fill="White" Margin="0,0,0,2"/>
                            <Ellipse Width="4" Height="4" Fill="White" Margin="0,0,0,2"/>
                            <Ellipse Width="4" Height="4" Fill="White"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="2"
                            Width="32"
                            Height="28"
                            Margin="12,0,0,0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            ToolTip="Close note"
                            Click="CloseButton_OnClick">
                        <Path Stroke="White"
                              StrokeThickness="2"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"
                              Data="M4,4 L12,12 M4,12 L12,4"/>
                    </Button>
                </Grid>
            </Border>

            <Popup x:Name="MenuPopup"
                   PlacementTarget="{Binding ElementName=MenuButton}"
                   Placement="Bottom"
                   AllowsTransparency="True"
                   StaysOpen="False">
                <Border Background="#FF2B2B2B"
                        CornerRadius="10"
                        Padding="12"
                        BorderBrush="#66000000"
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="12"
                                          Opacity="0.4"
                                          ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Colors"
                                   Foreground="#FFBFBFBF"
                                   FontSize="12"
                                   Margin="0,0,0,6"/>
                        <ListBox ItemsSource="{Binding ColorOptions}"
                                 SelectedItem="{Binding Color}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 Focusable="False">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="2"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Width="32" Height="32">
                                        <Border x:Name="ColorSwatch"
                                                Background="{Binding}"
                                                BorderBrush="Transparent"
                                                BorderThickness="2"
                                                CornerRadius="6"/>
                                        <Path x:Name="CheckIcon"
                                              Visibility="Collapsed"
                                              Stroke="White"
                                              StrokeThickness="2"
                                              StrokeStartLineCap="Round"
                                              StrokeEndLineCap="Round"
                                              Data="M6,16 L14,22 L26,10"/>
                                    </Grid>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}"
                                                     Value="True">
                                            <Setter TargetName="ColorSwatch" Property="BorderBrush" Value="White"/>
                                            <Setter TargetName="CheckIcon" Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Separator Margin="0,10,0,6" Background="#33FFFFFF" Height="1"/>

                        <Button Background="Transparent"
                                BorderBrush="Transparent"
                                Padding="6"
                                HorizontalAlignment="Stretch"
                                Click="ShowNotesListMenuItem_OnClick">
                            <StackPanel Orientation="Horizontal">
                                <Path Width="18"
                                      Height="18"
                                      StrokeThickness="2"
                                      Stroke="White"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      Data="M4,6 H28 M4,12 H28 M4,18 H20"
                                      Margin="0,0,8,0"/>
                                <TextBlock Text="Notes list"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Background="Transparent"
                                BorderBrush="Transparent"
                                Padding="6"
                                HorizontalAlignment="Stretch"
                                Click="DeleteNoteMenuItem_OnClick">
                            <StackPanel Orientation="Horizontal">
                                <Path Width="18"
                                      Height="18"
                                      StrokeThickness="2"
                                      Stroke="White"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      Data="M6,6 H30 M10,6 V4 H26 V6 M12,6 V28 M24,6 V28 M12,28 H24"
                                      Margin="0,0,8,0"/>
                                <TextBlock Text="Delete note"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Popup>

            <!-- Editor -->
            <RichTextBox x:Name="ContentBox"
                         Grid.Row="1"
                         Margin="8"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="4"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         SpellCheck.IsEnabled="True"
                         VerticalScrollBarVisibility="Auto"
                         TextChanged="ContentBox_OnTextChanged">
                <FlowDocument />
            </RichTextBox>

            <!-- Timer readout and focus controls -->
            <Border Grid.Row="2"
                    Background="#1A000000"
                    Padding="12"
                    BorderBrush="#22000000"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="14"
                                      ShadowDepth="2"
                                      Opacity="0.35"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0">
                        <TextBlock Text="Time remaining:"
                                   FontWeight="Bold"
                                   Foreground="{Binding FocusForegroundBrush}"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding RemainingTime, StringFormat={}{0:hh\\:mm\\:ss}}"
                                   Margin="8,0,0,0"
                                   Foreground="{Binding FocusForegroundBrush}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </DockPanel>

                    <Grid Grid.Row="1" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal"
                                    Grid.Column="0"
                                    VerticalAlignment="Center">
                            <Button Content="âˆ’"
                                    FontSize="16"
                                    Width="38"
                                    Height="32"
                                    Command="{Binding DecreaseDurationCommand}"
                                    Background="{Binding Color}"
                                    Foreground="{Binding FocusForegroundBrush}"
                                    BorderBrush="#33000000"
                                    BorderThickness="1"
                                    Padding="0"
                                    Margin="0,0,6,0">
                                <Button.Effect>
                                    <DropShadowEffect BlurRadius="8"
                                                      ShadowDepth="1"
                                                      Opacity="0.35"/>
                                </Button.Effect>
                            </Button>
                            <Border Background="{Binding Color}"
                                    Padding="14,6"
                                    CornerRadius="8"
                                    BorderBrush="#33000000"
                                    BorderThickness="1"
                                    Margin="0,0,6,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8"
                                                      ShadowDepth="1"
                                                      Opacity="0.35"/>
                                </Border.Effect>
                                <TextBlock Text="{Binding DurationMinutes, StringFormat={}{0:0} mins}"
                                           Foreground="{Binding FocusForegroundBrush}"
                                           FontWeight="SemiBold"/>
                            </Border>
                            <Button Content="+"
                                    FontSize="16"
                                    Width="38"
                                    Height="32"
                                    Command="{Binding IncreaseDurationCommand}"
                                    Background="{Binding Color}"
                                    Foreground="{Binding FocusForegroundBrush}"
                                    BorderBrush="#33000000"
                                    BorderThickness="1"
                                    Padding="0">
                                <Button.Effect>
                                    <DropShadowEffect BlurRadius="8"
                                                      ShadowDepth="1"
                                                      Opacity="0.35"/>
                                </Button.Effect>
                            </Button>
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    Margin="12,0,0,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding ShowPausedControls, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Button Width="40"
                                    Height="36"
                                    Background="{Binding Color}"
                                    BorderBrush="#33000000"
                                    BorderThickness="1"
                                    Command="{Binding ResetFocusCommand}">
                                <Button.Effect>
                                    <DropShadowEffect BlurRadius="8"
                                                      ShadowDepth="1"
                                                      Opacity="0.35"/>
                                </Button.Effect>
                                <Path Width="18"
                                      Height="18"
                                      Stroke="{Binding FocusForegroundBrush}"
                                      StrokeThickness="2"
                                      Data="M8,3 A 5,5 0 1 0 13,8 L15,8 M9,1 L9,5"/>
                            </Button>
                            <Button Width="40"
                                    Height="36"
                                    Margin="8,0,0,0"
                                    Background="{Binding Color}"
                                    BorderBrush="#33000000"
                                    BorderThickness="1"
                                    Command="{Binding ResumeFocusCommand}">
                                <Button.Effect>
                                    <DropShadowEffect BlurRadius="8"
                                                      ShadowDepth="1"
                                                      Opacity="0.35"/>
                                </Button.Effect>
                                <Path Width="18"
                                      Height="18"
                                      Fill="{Binding FocusForegroundBrush}"
                                      Data="M6,4 L16,10 L6,16 Z"/>
                            </Button>
                        </StackPanel>

                        <Button Grid.Column="2"
                                Margin="12,0,0,0"
                                Padding="18,8"
                                Background="{Binding Color}"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                Command="{Binding FocusCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShowPausedControls}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="10"
                                                  ShadowDepth="2"
                                                  Opacity="0.45"/>
                            </Button.Effect>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Path Width="16"
                                      Height="16"
                                      Fill="{Binding FocusForegroundBrush}"
                                      Data="{Binding FocusButtonIconData}"
                                      Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding FocusButtonText}"
                                           Foreground="{Binding FocusForegroundBrush}"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
